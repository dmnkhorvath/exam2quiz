generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Tenants ───────────────────────────────────────────────────────
model Tenant {
  id                    String         @id @default(cuid())
  name                  String
  slug                  String         @unique
  isActive              Boolean        @default(true)
  geminiApiKey          String?
  maxConcurrentPipelines Int           @default(2)
  storageQuotaMb        Int            @default(5000)
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt

  users                 User[]
  pipelineRuns          PipelineRun[]
  categories            TenantCategory[]

  @@map("tenants")
}

// ─── Users ─────────────────────────────────────────────────────────
enum UserRole {
  SUPER_ADMIN
  TENANT_ADMIN
  TENANT_USER
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  name         String?
  role         UserRole  @default(TENANT_USER)
  isActive     Boolean   @default(true)
  tenantId     String?
  tenant       Tenant?   @relation(fields: [tenantId], references: [id], onDelete: SetNull)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("users")
}

// ─── Tenant Categories ─────────────────────────────────────────────
model TenantCategory {
  id        String   @id @default(cuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  key       String
  name      String
  file      String
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())

  @@unique([tenantId, key])
  @@map("tenant_categories")
}

// ─── Pipeline Runs ─────────────────────────────────────────────────
enum PipelineStatus {
  QUEUED
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

model PipelineRun {
  id              String         @id @default(cuid())
  tenantId        String
  tenant          Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  status          PipelineStatus @default(QUEUED)
  filename        String?
  currentStage    String?
  totalPdfs       Int            @default(0)
  processedPdfs   Int            @default(0)
  totalQuestions  Int            @default(0)
  errorMessage    String?
  startedAt       DateTime?
  completedAt     DateTime?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  jobs            PipelineJob[]

  @@index([tenantId, status])
  @@map("pipeline_runs")
}

// ─── Pipeline Jobs (per-stage tracking) ────────────────────────────
enum JobStatus {
  PENDING
  ACTIVE
  COMPLETED
  FAILED
  RETRYING
}

model PipelineJob {
  id            String       @id @default(cuid())
  pipelineRunId String
  pipelineRun   PipelineRun  @relation(fields: [pipelineRunId], references: [id], onDelete: Cascade)
  stage         String
  bullmqJobId   String?
  status        JobStatus    @default(PENDING)
  progress      Float        @default(0)
  result        Json?
  errorMessage  String?
  attempts      Int          @default(0)
  startedAt     DateTime?
  completedAt   DateTime?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([pipelineRunId, stage])
  @@map("pipeline_jobs")
}
